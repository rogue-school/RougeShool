# MCP 서버 환경 설정

# 서버 설정
SERVER_NAME=rougeshool-mcp-server
SERVER_VERSION=2.0.0
PORT=3000
HOST=localhost

# 프로젝트 설정
MAX_FILE_SIZE=10485760
SUPPORTED_EXTENSIONS=.cs,.js,.ts,.json

# 로깅 설정
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true
LOG_DIRECTORY=logs

# 성능 설정
ENABLE_METRICS=true
SLOW_OPERATION_THRESHOLD=1000
MAX_CONCURRENT_OPERATIONS=10

# 캐시 설정
ENABLE_CACHING=true
CACHE_TTL=300000
CACHE_MAX_SIZE=1000
